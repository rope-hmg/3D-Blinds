{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "src",
        "paths": {
            "*": ["src/*"]
        },
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
